{
  "name": "update-now",
  "displayName": "Update Now",
  "description": "Update your Package.json dependencies to their latest version in no time.",
  "keywords": [
    "Dependencies",
    "SCA",
    "Analysis",
    "Package.json",
    "Npm",
    "Packages"
  ],
  "publisher": "AndyGongea",
  "version": "1.0.0-alpha.0",
  "engines": {
    "vscode": "^1.77.0"
  },
  "icon": "resources/logo@2x.png",
  "author": {
    "name": "Andy Gongea",
    "email": "andy.gongea@gmail.com",
    "url": "https://gongea.com"
  },
  "pricing": "Free",
  "categories": [
    "Programming Languages"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/andygongea/update-now.git"
  },
  "activationEvents": [
    "onLanguage:json",
    "onLanguage:jsonc"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Update Now",
      "properties": {
        "update-now.codeLens.patch": {
          "type": "boolean",
          "default": true,
          "description": "‚ùáÔ∏è Show CodeLens for PATCH version updates"
        },
        "update-now.codeLens.minor": {
          "type": "boolean",
          "default": true,
          "description": "‚ú¥Ô∏è Show CodeLens for MINOR version updates"
        },
        "update-now.codeLens.major": {
          "type": "boolean",
          "default": true,
          "description": "üõëShow CodeLens for MAJOR version updates"
        }
      }
    },
    "commands": [
      {
        "command": "update-now.updateAllDependencies",
        "title": "Update all dependencies",
        "category": "‚á™ Update Now"
      },
      {
        "command": "update-now.showCacheView",
        "title": "Show Dependencies Data",
        "category": "‚á™ Update Now"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "update-now-cache",
          "title": "Update Now",
          "icon": "resources/logo-outline@2x.png"
        }
      ]
    },
    "views": {
      "update-now-cache": [
        {
          "id": "dependenciesData",
          "name": "Dependencies Data",
          "type": "webview"
        }
      ]
    },
    "codelens": {
      "languages": [
        "json"
      ]
    },
    "menus": {
      "editor/context": [
        {
          "when": "resourceLangId == json && resourceFilename == package.json",
          "command": "update-now.updateAllDependencies",
          "group": "dependencies"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src/**/*.ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/node": "22.9.0",
    "@types/semver": "^7.5.8",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "8.14.0",
    "@typescript-eslint/parser": "8.14.0",
    "eslint": "9.14.0",
    "glob": "11.0.0",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "axios": "1.7.9",
    "semver": "7.6.3"
  }
}