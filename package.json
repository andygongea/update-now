{
  "name": "update-now",
  "displayName": "Update Now",
  "description": "Update your Package.json dependencies to their latest version in no time.",
  "keywords": [
    "Dependencies",
    "SCA",
    "Analysis",
    "Package.json",
    "Npm",
    "Packages"
  ],
  "publisher": "AndyGongea",
  "version": "0.0.7",
  "engines": {
    "vscode": "^1.77.0"
  },
  "icon": "resources/logo@2x.png",
  "author": {
    "name": "Andy Gongea",
    "email": "andy.gongea@gmail.com",
    "url": "https://gongea.com"
  },
  "pricing": "Free",
  "categories": [
    "Programming Languages"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/andygongea/update-now.git"
  },
  "activationEvents": [
    "onLanguage:json",
    "onLanguage:jsonc"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "update-now.updateAllDependencies",
        "title": "Update all dependencies",
        "category": "ðŸš€ Update Now"
      }
    ],
    "codelens": {
      "languages": [
        "json"
      ]
    },
    "menus": {
      "editor/context": [
        {
          "when": "resourceLangId == json && resourceFilename == package.json",
          "command": "update-now.updateAllDependencies",
          "group": "dependencies"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.4",
    "@types/node": "16.18.60",
    "@types/vscode": "^1.77.0",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "@vscode/test-electron": "^2.3.6",
    "eslint": "^8.54.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "axios": "1.6.5",
    "semver": "7.5.4"
  }
}